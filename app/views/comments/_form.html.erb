<%= simple_form_for [@post, @comment], input_html: { role: 'form' } do |f| %>
  

  <div class = "form-group">
    <%= f.input :body, label: false, class: "form-control", placeholder: "Comment" %><br>
  </div>

  <%= link_to "<span class='glyphicon glyphicon-trash'></span>".html_safe + ' Delete', [@post, @comment], method: :delete, data: { confirm: 'Are you sure?' } , class: "btn btn-danger" %>
  <%= link_to 'Back', post_path(@post) , class: "btn btn-default" %>
  <%= f.submit 'Submit', class: "btn btn-success" %>
<% end %>
