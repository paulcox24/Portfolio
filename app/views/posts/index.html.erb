
<h1>Blog posts</h1>

<p><%= link_to 'New Post', new_post_path %></p>

  <% @posts.reverse.each do |post| %>

      <hr />  
      <h2><%= post.title %></h2>
      <h3><%= post.author %></h3>
      <p><%= post.body %></p>
      <%= link_to 'Comment', post_path(post.id) %>
      <%= link_to 'Edit', edit_post_path(post.id) %>
      <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
    
  <% end %>

<br>


