
<div class="blog_title"><h1>Blog</h1></div>
<% if notice %>
  <p id="notice">
    <%= notice %>
  </p>
<% end %>

<div class= "npb" ><%= link_to "New Post", new_post_path, class: "btn btn-primary btn-lg" %></div>

<% @posts.reverse.each do |post| %>
    <div class="page-header" > 
    <h2><%= link_to post.title, post_path(post.id) %> <small><%= post.author %></small></h2>
    </div>
    <p><%= post.body %></p>
    <ul>
      <% post.comments.each do |comment| %>
        <li><%= comment.body %></li>
      <% end %>
    </ul>
    <%= link_to 'View/Comment', post_path(post.id) , class: "btn btn-default"%>
<% end %>



