<h1>New post</h1>
<br>
<div class="row">
  <div class="col-md-6">

  <%= simple_form_for @post, html: { role: 'form'} do |f| %>
    

    <div class="form-group">
      <%= f.input :title, label: false, class: "form-control", placeholder: "Title" %>
    </div>
    <div class="form-group">
      <%= f.input :author, label: false, class: "form-control", placeholder: "Author" %>
    </div>
    <div class="form-group">
      <%= f.input :body, label: false, class: "form-control", placeholder: "Body" %>
    </div>

    <%= link_to 'Back', posts_path , class: "btn btn-default" %>
    <%= f.submit "Create Post", class: "btn btn-success" %>
  <% end %>
  </div>
</div>
